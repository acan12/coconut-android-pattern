<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">

        <shape>
            <solid android:color="@color/cross_btn_primary_selected_color" />

            <stroke android:width="0dip" android:color="@color/cross_btn_primary_selected_color" />

            <corners android:radius="5dip" />

            <padding android:bottom="0dip" android:left="0dip" android:right="0dip" android:top="0dip" />
        </shape>
    </item>

    <item android:state_pressed="true">

        <shape>
            <solid android:color="@color/cross_btn_primary_selected_color" />

            <stroke android:width="0dip" android:color="@color/cross_btn_primary_selected_color" />

            <corners android:radius="5dip" />

            <padding android:bottom="0dip" android:left="0dip" android:right="0dip" android:top="0dip" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/cross_btn_primary_selected_color" />

            <stroke android:width="0dip" android:color="@color/cross_btn_primary_selected_color" />

            <corners android:radius="5dip" />

            <padding android:bottom="0dip" android:left="0dip" android:right="0dip" android:top="0dip" />
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape>
            <solid android:color="@color/cross_btn_primary_color" />

            <stroke android:width="0dip" android:color="@color/cross_btn_primary_color" />

            <corners android:radius="5dip" />

            <padding android:bottom="0dip" android:left="0dip" android:right="0dip" android:top="0dip" />
        </shape>
    </item>
</selector>