<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@mipmap/background_firsttime_install"
        tools:ignore="MissingPrefix">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
                android:id="@+id/bottom_layout"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_alignParentTop="true"
                android:gravity="top|center_horizontal"
                android:orientation="horizontal">

            <View
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:rotation="180"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/trio_bar_red"/>

            <View
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:rotation="180"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/trio_bar_orange"/>

            <View
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:rotation="180"
                    android:background="@drawable/trio_bar_blue"/>

        </LinearLayout>

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/logo"
                android:layout_above="@id/tv_version"
                android:layout_centerHorizontal="true"/>

        <TextView
                android:id="@+id/tv_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="10dp"
                fontPath="fonts/Regular.otf"
                android:textSize="12sp"
                android:layout_marginBottom="20dp"
                tools:text="Ver X.0.0"/>
    </RelativeLayout>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.50" />

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/guideline">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:paddingStart="25dp"
                android:paddingEnd="25dp"
                android:paddingBottom="30dp">
            <Button
                    android:id="@+id/btn_sign_in"
                    fontPath="fonts/SemiBold.otf"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:background="@drawable/white_rounded_bg"
                    android:text="@string/sign_up_tab_title_sign_in"
                    android:textAllCaps="false"
                    android:textColor="@color/text_signin"
                    android:textSize="13sp"
                    android:layout_weight="5"
                    android:layout_marginEnd="6dp" />

            <Button
                    android:id="@+id/btn_sign_up"
                    fontPath="fonts/SemiBold.otf"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:background="@drawable/aqua_rounded_bg"
                    android:text="@string/sign_up_tab_title_register"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:layout_weight="5"
                    android:layout_marginStart="6dp"/>
        </LinearLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>