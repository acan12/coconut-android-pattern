<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:ignore="MissingPrefix">

    <include layout="@layout/toolbar" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fillViewport="true">

            <LinearLayout
                    android:id="@+id/sign_up_form"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="32dp"
                    android:visibility="visible">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                            fontPath="fonts/SemiBold.otf"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/sign_up_label_no_handphone"
                            android:textColor="@color/text_black"
                            android:textSize="16sp" />

                    <ImageView
                            android:id="@+id/img_phone_sign_up_status"
                            android:layout_width="24dp"
                            android:layout_height="16dp"
                            android:src="@mipmap/ic_phone_invalid"
                            android:tint="@color/cross_imageview_signup"
                            android:visibility="gone" />

                </LinearLayout>

                <EditText
                        android:id="@+id/et_no_handphone_sign_up"
                        fontPath="fonts/Regular.otf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:background="@color/transparent"
                        android:ems="10"
                        android:hint="@string/signin_no_handphone_hint_resize"
                        android:inputType="number"
                        android:textColor="@color/text_edittext_black"
                        android:textSize="17sp" />

                <View
                        android:id="@+id/line_phone_sign_up_status"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/medium_grey" />

                <TextView
                        fontPath="fonts/Regular.otf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/signup_no_handphone_note"
                        android:textColor="@color/grey" />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">

                    <TextView
                            fontPath="fonts/SemiBold.otf"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/sign_up_label_name"
                            android:textColor="@color/text_black"
                            android:textSize="16sp" />

                    <ImageView
                            android:id="@+id/img_username_status"
                            android:layout_width="24dp"
                            android:layout_height="16dp"
                            android:src="@mipmap/ic_username_valid"
                            android:tint="@color/medium_grey" />

                </LinearLayout>

                <EditText
                        android:id="@+id/et_username"
                        fontPath="fonts/Regular.otf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:background="@color/transparent"
                        android:ems="10"
                        android:hint="@string/signup_username_hint"
                        android:inputType="textCapWords"
                        android:maxLength="50"
                        android:textColor="@color/text_edittext_black"
                        android:textSize="17sp" />

                <View
                        android:id="@+id/line_username_status"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/medium_grey" />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">

                    <TextView
                            fontPath="fonts/SemiBold.otf"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/sign_up_label_email"
                            android:textColor="@color/text_black"
                            android:textSize="16sp" />

                    <ImageView
                            android:id="@+id/img_email_status"
                            android:layout_width="24dp"
                            android:layout_height="16dp"
                            android:src="@mipmap/ic_mail_invalid"
                            android:tint="@color/cross_imageview_signup"
                            android:visibility="gone" />

                </LinearLayout>

                <EditText
                        android:id="@+id/et_email_sign_up"
                        fontPath="fonts/Regular.otf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:background="@color/transparent"
                        android:ems="10"
                        android:hint="@string/signup_email_hint"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/text_edittext_black"
                        android:textSize="17sp" />

                <View
                        android:id="@+id/line_email_status"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/medium_grey" />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">

                    <TextView
                            fontPath="fonts/SemiBold.otf"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/setup_pin_label_referral_code"
                            android:textColor="@color/text_black"
                            android:textSize="16sp" />

                    <ImageView
                            android:id="@+id/img_referal"
                            android:layout_width="24dp"
                            android:layout_height="16dp"
                            android:src="@mipmap/side_menu_referral"
                            android:tint="@color/medium_grey"/>

                </LinearLayout>

                <EditText
                        android:id="@+id/et_kode_referal"
                        fontPath="fonts/Regular.otf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:background="@color/transparent"
                        android:ems="10"
                        android:hint="@string/setup_pin_label_optional"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/text_edittext_black"
                        android:textSize="17sp" />

                <View
                        android:id="@+id/line_referral_code_status"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/medium_grey" />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp"
                        android:orientation="vertical">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                        <CheckBox
                                android:id="@+id/cb_tac"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:gravity="top" />

                        <TextView
                                android:id="@+id/tv_tac"
                                fontPath="fonts/Regular.otf"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:textColor="@color/cross_text_title" />

                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginTop="20dp">

                        <CheckBox
                                android:id="@+id/cb_tac2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:gravity="top" />

                        <TextView
                                android:id="@+id/tv_tac2"
                                fontPath="fonts/Regular.otf"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:text="@string/sign_up_label_tac2_link"
                                android:textColor="@color/cross_text_title" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <Button
                android:id="@+id/btn_sign_up"
                fontPath="fonts/SemiBold.otf"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/button_primary_selected_bg"
                android:text="@string/sign_up_btn_sign_up"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="14sp" />
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>